@using ThenC.Controllers;
@model List<PersonModel>

@{
    ViewData["Title"] = "Person";

}

<style>
    .btn-close-status {
        position: absolute;
        right: 1%;
        top: 30%;
    }

    }
</style>
<div class="container">
    <main role="main" class="pb-3">
        <h1>@ViewData["Title"]</h1>

        @if (TempData["Status"] != null)
        {

            @if ((int)TempData["Status"] == 0)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["msg"]
                    <div class="btn-close btn-close-status">x</div>
                </div>
            }
            @if ((int)TempData["Status"] == 1)
            {
                <div class="alert alert-warning" role="alert">
                    @TempData["msg"]
                    <div class="btn-close btn-close-status">x</div>
                </div>

            }
        }


        <input type="text" class="" placeholder="Pesquisar" />


        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Address</th>
                    <th scope="col">Doc.</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>

                @{

                    if (Model != null)
                    {
                        foreach (var item in Model)
                        {


                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.Doc</td>
                                
                                <td scope="col">
                                    <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Person" asp-action="GetForUpdate">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Person" asp-action="ConfirmDelete">Apagar</a>
                                </td>
                            </tr>




                        }

                    }
                }

            </tbody>
        </table>

        <a class="btn btn-primary" role="button" asp-action="Create">Adicionar Novo</a>
        @{
            IgnoreBody();
        }
    </main>
</div>



